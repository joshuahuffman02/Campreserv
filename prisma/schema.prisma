model Site {
  id               String   @id @default(cuid())
  campgroundId     String
  campground       Campground @relation(fields: [campgroundId], references: [id])
  name             String

  /// High-level category, e.g. "RV", "Tent", "Cabin", "Glamping"
  kind             String

  /// Optional human-friendly type label, e.g. "Back-in FHU 50/30", "Deluxe Cabin"
  typeLabel        String?

  nightlyRateCents Int

  // ------------ Layout & hookups ------------
  /// True if the site is pull-through. If false (or null), treat as back-in / other.
  isPullThrough      Boolean? @default(false)

  /// Approximate maximum rig length in feet (for RVs / trailers).
  maxRigLengthFeet   Int?

  /// Hookups
  has50Amp           Boolean? @default(false)
  has30Amp           Boolean? @default(false)
  has20Amp           Boolean? @default(false)
  hasWaterHookup     Boolean? @default(false)
  hasSewerHookup     Boolean? @default(false)
  hasCableTV         Boolean? @default(false)
  hasWifi            Boolean? @default(false)

  // ------------ Outdoor amenities ------------
  hasPatio           Boolean? @default(false)
  hasFireRing        Boolean? @default(false)
  hasPicnicTable     Boolean? @default(false)

  // ------------ Capacity & policy ------------
  /// Maximum number of people allowed on this site.
  maxOccupancy       Int?

  /// Suggested max number of vehicles (RV + towed vehicle, etc).
  maxVehicles        Int?

  isPetFriendly      Boolean? @default(true)
  isAccessible       Boolean? @default(false)

  // ------------ Lodging-specific details (cabins / glamping) ------------
  /// True if this site includes a private bathroom.
  hasBathroom        Boolean? @default(false)

  /// True if this site includes a kitchen or kitchenette.
  hasKitchen         Boolean? @default(false)

  /// True if linens are included by default.
  linensIncluded     Boolean? @default(false)

  /// Free-form notes for things that donâ€™t fit in other fields
  /// (e.g. "Loft bed", "River view", "Shares fire ring with site 12").
  notes              String?

  reservations       Reservation[]
}